@model RMS.Models.ProjectDetail

@{
    ViewBag.Title = "Project Details";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<style>
    /* Custom styles for aligning <dt> elements to the left */
    .dl-horizontal dt {
        float: left;
        width: 160px; /* Adjust the width as needed for proper alignment */
        clear: left;
        text-align: left;
        padding-right: 10px;
    }

    .dl-horizontal dd {
        margin-left: 180px; /* Adjust the margin to match the width of <dt> elements */
    }

    /* Add a little gap on the left side */
    .panel-body {
        padding-left: 20px; /* Adjust the padding as needed */
    }
</style>

<h2>Project Details</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>Description:</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>Skills:</dt>
            <dd>@Html.DisplayFor(model => model.Skills)</dd>

            <dt>Domain:</dt>
            <dd>@Html.DisplayFor(model => model.Domain)</dd>

            <dt>Tools:</dt>
            <dd>@Html.DisplayFor(model => model.Tools)</dd>

            <dt>Students Allowed:</dt>
            <dd>@Html.DisplayFor(model => model.StudentsAllowed)</dd>

            <dt>Supervisor ID:</dt>
            <dd>@Html.DisplayFor(model => model.SupervisorID)</dd>

            <dt>Created Date:</dt>
            <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>
        </dl>
    </div>
</div>

@Html.ActionLink("Back to List", "ProjectList", null, new { @class = "btn btn-default" })