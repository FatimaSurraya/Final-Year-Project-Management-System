@{    Layout = null;}<!DOCTYPE html><html><head>    <meta name="viewport" content="width=device-width" />    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />    <script src="~/Scripts/jquery-1.10.2.min.js"></script>    <script src="~/Scripts/bootstrap.min.js"></script>    <title>Register</title></head><body class="img-responsive">    <style>
        body {
            background-image: url("../Content/images/background.jpg");
            padding-top: 100px;
            background-size: cover; /* Updated value */
            background-repeat: no-repeat;
            background-position: center center;
        }
        .asterisk:after {
            content: " *";
            color: red;
        }    </style>    <form id="account_form">        <div class="container">            <div class="col-md-6" style="color: white;">                <h1>Final Year Project Management System</h1>                <p>Register here.</p>                <hr />            </div>            <div class="col-md-6">                <div class="well">                    <h4>Register here.</h4>                    <div id="alert"></div>                    <label class="asterisk">First Name</label>                    <input type="text" id="login_first_name" class="form-control">                    <label class="asterisk">Last Name</label>                    <input type="text" id="login_last_name" class="form-control">                    <label class="asterisk">Email</label>                    <input type="text" id="login_email" class="form-control">                    <label class="asterisk">User Type</label>                    <select class="form-control" id="login_usertype">                        <option value="1">Admin</option>                        <option value="2">Supervisor</option>                        <option value="3">Student</option>                    </select>                    <label class="asterisk">Password</label>                    <input type="password" id="login_password" class="form-control" textMode="Password">                    <br />                    <input type="button" id="btn_login" class="btn btn-warning btn-block" value="Register">                </div>            </div>        </div>    </form>    <script>        ///// login click        $("#btn_login").click(function () {            var FirstName = $("#login_first_name").val();            var LastName = $("#login_last_name").val();            var Email = $("#login_email").val();            var Password = $("#login_password").val();            var UserType = $("#login_usertype").val();            if (!FirstName) {                alert("Please enter First Name");                return;            }            if (!LastName) {                alert("Please enter Last Name");                return;            }            if (!Email) {                alert("Please enter Email");                return;            }            if (!Password) {                alert("Please enter Password");                return;            }            $.ajax({                url: '/Home/Register',                method: 'post',                traditional: true,                data: {                    'FirstName': FirstName,                    'LastName': LastName,                    'Password': Password,                    'Email': Email,                    'UserTypeId': UserType                },                success: Registersuccess            });        });        function Registersuccess(response) {            if (response == "1") {                window.location.href = "/Home/Login";            }            if (response == "-1") {                alert("Invalid Email Address");                return;            }            if (response == "-2") {                alert("Please provide strong password");                return;            }            if (response == "-3") {
                alert("User already exist. Please provide unique value");
                return;
            }        }    </script></body></html>